<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LiveWallpaper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivitySlideAnimation</item>
        <!-- 设置窗口背景色，避免语言切换时的黑屏闪烁 -->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- 禁用窗口内容过渡动画，减少闪烁 -->
        <item name="android:windowContentTransitions">false</item>
        <!-- Edge-to-Edge 配置：在 XML 中预设，避免运行时布局跳动 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 优化启动性能 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="ActivitySlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- 从左侧滑入的Activity主题 -->
    <style name="Theme.LiveWallpaper.SlideFromLeft" parent="Theme.LiveWallpaper">
        <item name="android:windowAnimationStyle">@style/ActivitySlideFromLeftAnimation</item>
    </style>

    <style name="ActivitySlideFromLeftAnimation" parent="@android:style/Animation.Activity">
        <!-- 打开时：绘画界面从左侧滑入，主页往右侧滑出 -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <!-- 关闭时：绘画界面往左侧滑出，主页从右侧滑入 -->
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>
</resources>